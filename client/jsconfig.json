{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@assets/*": ["src/assets/*"],
      "@contexts/*": ["src/contexts/*"],
      "@services/*": ["src/services/*"],
      "@hooks/*": ["src/hooks/*"]
    },
    "strict": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react-jsx"
  },
  "exclude": ["node_modules"]
}